<div class="panel">
  <div class="row collapse">
    <div class="medium-12 columns">
      <h4 class="no-m pts pbs"><%= t(:new_email_address) %></h4>
    </div>
  </div>
</div>
<%= form_for @email_address do |f| %>
  <div class="row mt">
    <div class="large-6 columns">
      <%= f.text_field :email %>

      <%= f.check_box :default %>

      <p>
        <%= t(:verification_mail_will_be_sent, title: Site.title) %>
      </p>

      <p>
        <strong>
          <%= t(:mark_spam_spf, title: Site.title) %>
        </strong>
      </p>

    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns bt">

      <%= f.submit t(:save), class: 'success button radius mt' %>
    </div>
  </div>
<% end %>
